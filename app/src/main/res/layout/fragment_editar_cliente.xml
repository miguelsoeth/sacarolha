<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.CadastrarClienteFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btnVoltar"
                    android:layout_width="30sp"
                    android:layout_height="30sp"
                    android:layout_gravity="end"
                    android:background="@drawable/ic_arrow_back"
                    app:backgroundTint="@null"
                    android:layout_marginEnd="20sp"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="20sp"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"
                    android:orientation="vertical"
                    android:gravity="center">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/dados_basicos"
                            android:fontFamily="@font/zain_regular"
                            android:textSize="30sp"/>
                    </LinearLayout>



                    <EditText
                        android:id="@+id/editNome"
                        android:layout_width="match_parent"
                        android:layout_height="50sp"
                        android:layout_marginBottom="10sp"
                        android:padding="10sp"
                        android:hint="@string/nome_completo"
                        android:singleLine="true"
                        android:fontFamily="@font/zain_regular"
                        android:textSize="20sp"
                        android:textColorHint="@color/transparent_white"
                        android:textColor="@color/white"
                        android:background="@drawable/bkg_dark_purple_rounded"
                        />

                    <EditText
                        android:id="@+id/editDocumento"
                        android:layout_width="match_parent"
                        android:layout_height="50sp"
                        android:layout_marginBottom="10sp"
                        android:padding="10sp"
                        android:hint="@string/documento"
                        android:maxLength="18"
                        android:singleLine="true"
                        android:fontFamily="@font/zain_regular"
                        android:textSize="20sp"
                        android:textColorHint="@color/transparent_white"
                        android:textColor="@color/white"
                        android:inputType="number"
                        android:background="@drawable/bkg_dark_purple_rounded"
                        />

                    <EditText
                        android:id="@+id/editTelefone"
                        android:layout_width="match_parent"
                        android:layout_height="50sp"
                        android:layout_marginBottom="10sp"
                        android:padding="10sp"
                        android:hint="@string/telefone"
                        android:singleLine="true"
                        android:fontFamily="@font/zain_regular"
                        android:textSize="20sp"
                        android:textColorHint="@color/transparent_white"
                        android:textColor="@color/white"
                        android:background="@drawable/bkg_dark_purple_rounded"
                        android:inputType="number"
                        />

                    <EditText
                        android:id="@+id/editMail"
                        android:layout_width="match_parent"
                        android:layout_height="50sp"
                        android:layout_marginBottom="10sp"
                        android:padding="10sp"
                        android:hint="@string/email"
                        android:inputType="textEmailAddress"
                        android:singleLine="true"
                        android:fontFamily="@font/zain_regular"
                        android:textSize="20sp"
                        android:textColorHint="@color/transparent_white"
                        android:textColor="@color/white"
                        android:background="@drawable/bkg_dark_purple_rounded"
                        />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="20sp"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/endereco"
                        android:fontFamily="@font/zain_regular"
                        android:textSize="30sp"/>



                    <Spinner
                        android:id="@+id/spinnerEstado"
                        android:layout_width="match_parent"
                        android:layout_height="50sp"
                        android:layout_marginBottom="10sp"
                        android:background="@drawable/bkg_dark_purple_rounded"
                        android:fontFamily="@font/zain_regular"
                        />

                    <EditText
                        android:id="@+id/editCidade"
                        android:layout_width="match_parent"
                        android:layout_height="50sp"
                        android:layout_marginBottom="10sp"
                        android:padding="10sp"
                        android:hint="@string/cidade"
                        android:singleLine="true"
                        android:fontFamily="@font/zain_regular"
                        android:textSize="20sp"
                        android:textColorHint="@color/transparent_white"
                        android:textColor="@color/white"
                        android:background="@drawable/bkg_dark_purple_rounded"
                        />

                    <EditText
                        android:id="@+id/editRua"
                        android:layout_width="match_parent"
                        android:layout_height="50sp"
                        android:layout_marginBottom="10sp"
                        android:padding="10sp"
                        android:hint="@string/rua"
                        android:singleLine="true"
                        android:fontFamily="@font/zain_regular"
                        android:textSize="20sp"
                        android:textColorHint="@color/transparent_white"
                        android:textColor="@color/white"
                        android:background="@drawable/bkg_dark_purple_rounded"
                        />

                    <EditText
                        android:id="@+id/editBairro"
                        android:layout_width="match_parent"
                        android:layout_height="50sp"
                        android:layout_marginBottom="10sp"
                        android:padding="10sp"
                        android:hint="@string/bairro"
                        android:singleLine="true"
                        android:fontFamily="@font/zain_regular"
                        android:textSize="20sp"
                        android:textColorHint="@color/transparent_white"
                        android:textColor="@color/white"
                        android:background="@drawable/bkg_dark_purple_rounded"
                        />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="50sp"
                        android:weightSum="1">

                        <EditText
                            android:id="@+id/editNumero"
                            android:layout_width="0dp"
                            android:layout_weight="0.25"
                            android:inputType="number"
                            android:layout_height="50sp"
                            android:layout_marginBottom="10sp"
                            android:padding="10sp"
                            android:hint="@string/num_ponto"
                            android:singleLine="true"
                            android:fontFamily="@font/zain_regular"
                            android:textSize="20sp"
                            android:textColorHint="@color/transparent_white"
                            android:textColor="@color/white"
                            android:background="@drawable/bkg_dark_purple_rounded"
                            android:layout_marginRight="10sp"
                            />

                        <EditText
                            android:id="@+id/editComplemento"
                            android:layout_width="0dp"
                            android:layout_weight="0.75"
                            android:layout_height="50sp"
                            android:layout_marginBottom="10sp"
                            android:padding="10sp"
                            android:hint="@string/complemento"
                            android:singleLine="true"
                            android:fontFamily="@font/zain_regular"
                            android:textSize="20sp"
                            android:textColorHint="@color/transparent_white"
                            android:textColor="@color/white"
                            android:background="@drawable/bkg_dark_purple_rounded"
                            />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/btnSalvar"
                android:fontFamily="@font/zain_regular"
                android:textSize="25sp"
                android:layout_gravity="center"
                android:layout_width="300sp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/light_green"
                android:text="@string/salvar" />

        </LinearLayout>

    </ScrollView>


</FrameLayout>