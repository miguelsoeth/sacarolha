<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="@drawable/bkg_light_purple_rounded"
        android:layout_height="wrap_content"
        android:weightSum="1"
        >

        <LinearLayout
            android:orientation="horizontal"
            android:paddingVertical="10sp"
            android:paddingHorizontal="25sp"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/text_vinho_nome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:fontFamily="@font/zain_regular"
                    android:text="Name"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_vinho_tipo"
                    android:fontFamily="@font/zain_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Document"
                    android:textSize="20sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/text_vinho_preco"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|end"
                android:textAlignment="textEnd"
                android:fontFamily="@font/zain_bold"
                android:text="Price"
                android:singleLine="true"
                android:ellipsize="end"
                android:textSize="20sp"
                />
        </LinearLayout>

        <Button
            android:id="@+id/btnItem"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/bkg_dark_purple_rounded"
            android:fontFamily="@font/zain_regular"
            android:text="Editar"
            android:textSize="20sp"/>

    </LinearLayout>
</LinearLayout>
