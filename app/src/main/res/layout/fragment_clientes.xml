<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ClientesFragment">

    <ScrollView
        android:layout_marginVertical="5sp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/contentLayout"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="10sp"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Clientes"
                        android:fontFamily="@font/zain_bold"
                        android:textSize="40sp"/>

                    <EditText
                        android:id="@+id/searchText"
                        android:layout_width="160sp"
                        android:hint="Pesquisar por nome"
                        android:singleLine="true"
                        android:padding="8sp"
                        android:layout_height="40sp"
                        android:fontFamily="@font/zain_bold"
                        android:layout_gravity="center"
                        android:background="@drawable/bkg_light_purple_rounded"/>

                </LinearLayout>

                <ListView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/listview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@color/white"/>

            </LinearLayout>

            <Button
                android:id="@+id/btnCadastrar"
                android:fontFamily="@font/zain_regular"
                android:textSize="25sp"
                android:layout_gravity="center"
                android:layout_width="300sp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/contentLayout"
                android:layout_centerHorizontal="true"
                android:backgroundTint="@color/light_green"
                android:text="Cadastrar cliente" />

        </RelativeLayout>

    </ScrollView>



</FrameLayout>