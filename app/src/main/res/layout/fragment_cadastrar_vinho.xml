<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CadastrarClienteFragment"
    >

    <ScrollView
        android:layout_marginVertical="5sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cadastrar Vinho"
                android:fontFamily="@font/zain_bold"
                android:textSize="40sp"
                android:gravity="center"
                android:layout_marginBottom="20sp"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="20sp"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"
                    android:orientation="vertical"
                    android:gravity="center">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Descrição"
                            android:fontFamily="@font/zain_regular"
                            android:textSize="30sp"/>
                    </LinearLayout>



                    <EditText
                        android:id="@+id/editNome"
                        android:layout_width="match_parent"
                        android:layout_height="50sp"
                        android:layout_marginBottom="10sp"
                        android:padding="10sp"
                        android:hint="Nome"
                        android:fontFamily="@font/zain_regular"
                        android:textSize="20sp"
                        android:textColorHint="@color/transparent_white"
                        android:textColor="@color/white"
                        android:background="@drawable/bkg_dark_purple_rounded"
                        />

                    <Spinner
                        android:id="@+id/spinnerTipo"
                        android:layout_width="match_parent"
                        android:layout_height="50sp"
                        android:layout_marginBottom="10sp"
                        android:background="@drawable/bkg_dark_purple_rounded"
                        android:fontFamily="@font/zain_regular"
                        />

                    <EditText
                        android:id="@+id/editSafra"
                        android:layout_width="match_parent"
                        android:layout_height="50sp"
                        android:layout_marginBottom="10sp"
                        android:padding="10sp"
                        android:hint="Ano da safra"
                        android:maxLength="18"
                        android:fontFamily="@font/zain_regular"
                        android:textSize="20sp"
                        android:textColorHint="@color/transparent_white"
                        android:textColor="@color/white"
                        android:inputType="number"
                        android:background="@drawable/bkg_dark_purple_rounded"
                        android:enabled="false"
                        android:drawableEnd="@drawable/ic_calendar"
                        />


                    <EditText
                        android:id="@+id/editTelefone"
                        android:layout_width="match_parent"
                        android:layout_height="50sp"
                        android:layout_marginBottom="10sp"
                        android:padding="10sp"
                        android:hint="Telefone"
                        android:fontFamily="@font/zain_regular"
                        android:textSize="20sp"
                        android:textColorHint="@color/transparent_white"
                        android:textColor="@color/white"
                        android:background="@drawable/bkg_dark_purple_rounded"
                        android:inputType="number"
                        />

                    <EditText
                        android:id="@+id/editMail"
                        android:layout_width="match_parent"
                        android:layout_height="50sp"
                        android:layout_marginBottom="10sp"
                        android:padding="10sp"
                        android:hint="Email"
                        android:inputType="textEmailAddress"
                        android:fontFamily="@font/zain_regular"
                        android:textSize="20sp"
                        android:textColorHint="@color/transparent_white"
                        android:textColor="@color/white"
                        android:background="@drawable/bkg_dark_purple_rounded"
                        />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="20sp"
                android:weightSum="1">

            </LinearLayout>

            <Button
                android:id="@+id/btnCadastrar"
                android:fontFamily="@font/zain_regular"
                android:textSize="25sp"
                android:layout_gravity="center"
                android:layout_width="250sp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/light_green"
                android:text="Cadastrar" />

        </LinearLayout>

    </ScrollView>


</FrameLayout>